#!/usr/bin/env groovy
stage('Get code from SCM') {
    node {
        checkout([$class: 'GitSCM', branches: [[name: '*/master']], userRemoteConfigs: [[url: 'https://github.com/craig-br/juice-shop.git']]])
    } 
}
